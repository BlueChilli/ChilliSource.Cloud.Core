<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;netstandard2.1;netstandard2.0;net472</TargetFrameworks>
    <DebugType>pdbonly</DebugType>
    <AssemblyName>ChilliSource.Cloud.Core</AssemblyName>
    <RootNamespace>ChilliSource.Cloud.Core</RootNamespace>
    <Description>Core library for ChilliSource.Cloud</Description>
    <Company>BlueChilli Technology Pty Ltd</Company>
    <SourceLinkUrl>https://github.com/BlueChilli/ChilliSource.Cloud.Core/</SourceLinkUrl>
    <RepositoryUrl>https://github.com/BlueChilli/ChilliSource.Cloud.Core</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/BlueChilli/ChilliSource.Cloud.Core/blob/master/LICENSE</PackageLicenseUrl>
    <Authors>BlueChilli Technology</Authors>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DefineConstants>TRACE;DEBUG;</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(TargetFramework)'=='net472'">
    <DefineConstants>$(DefineConstants);NET_4X</DefineConstants>
  </PropertyGroup>
	
  <PropertyGroup Condition="'$(TargetFramework)'=='net6.0'">
    <DefineConstants>$(DefineConstants);NET_6X</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Extensions\IntExtensions.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DataTables.AspNet.Core" Version="2.0.2" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="EnterpriseLibrary.TransientFaultHandling" Version="6.0.1304" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="EnterpriseLibrary.TransientFaultHandling.Data" Version="6.0.1304.1" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="EntityFramework" Version="6.4.4" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="LinqKit" Version="1.1.17" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="Microsoft.EntityFrameworkCore.SqlServer.NetTopologySuite" Version="2.2.2" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="Microsoft.Extensions.Hosting.Abstractions" Version="2.2.0" />
    <PackageReference Condition="'$(TargetFramework)'=='net472'" Include="Microsoft.SqlServer.Types" Version="14.0.1016.290" />

    <PackageReference Include="AutoMapper" Version="8.0.0" />
    <PackageReference Include="ChilliSource.Core.Extensions" Version="2.0.3" />
    <PackageReference Include="CsvHelper" Version="27.1.1" />
    <PackageReference Include="Humanizer.Core" Version="2.11.10" />
    <PackageReference Include="libphonenumber-csharp" Version="8.12.28" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Nito.AsyncEx" Version="5.1.0" />
    <PackageReference Include="NodaTime" Version="3.0.5" />
    <PackageReference Include="RestSharp" Version="108.0.1" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="System.Threading.Tasks.Dataflow" Version="5.0.0" />


    <PackageReference Condition="'$(TargetFramework)'!='net472'" Include="System.Configuration.ConfigurationManager" Version="5.0.0" />
    <PackageReference Condition="'$(TargetFramework)'!='net472'" Include="EnterpriseLibrary.TransientFaultHandling.Data.NetCore" Version="6.0.1312" />
    <PackageReference Condition="'$(TargetFramework)'!='net472'" Include="EnterpriseLibrary.TransientFaultHandling.NetCore" Version="6.0.1312" />
    <PackageReference Condition="'$(TargetFramework)'!='net472'" Include="LinqKit.Core" Version="1.1.26" />

    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="Microsoft.EntityFrameworkCore.SqlServer.NetTopologySuite" Version="3.1.8" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="Microsoft.Extensions.Hosting.Abstractions" Version="3.1.8" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="Microsoft.EntityFrameworkCore" Version="3.1.8" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.0'" Include="Microsoft.EntityFrameworkCore.Relational" Version="3.1.8" />

    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.1'" Include="Microsoft.EntityFrameworkCore.SqlServer.NetTopologySuite" Version="5.0.11" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.1'" Include="Microsoft.Extensions.Hosting.Abstractions" Version="5.0.0" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.1'" Include="Microsoft.EntityFrameworkCore" Version="5.0.11" />
    <PackageReference Condition="'$(TargetFramework)'=='netstandard2.1'" Include="Microsoft.EntityFrameworkCore.Relational" Version="5.0.11" />

    <PackageReference Condition="'$(TargetFramework)'=='net6.0'" Include="Microsoft.EntityFrameworkCore.SqlServer.NetTopologySuite" Version="6.0.0" />
